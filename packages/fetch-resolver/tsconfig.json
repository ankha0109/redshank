{
  "buildOptions": {
    "jsx": "react-jsx"
  },
  "compilerOptions": {
    "allowJs": true
    /* Allow javascript files to be compiled. */,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "composite": true,
    "rootDir": "src",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/index.ts"
  ],
  "exclude": [
    ".ci",
    "dist",
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "src/index.d.ts",
    "src/**/__tests__"
  ]
}
